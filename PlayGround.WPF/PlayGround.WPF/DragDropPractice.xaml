<UserControl x:Class="PlayGround.WPF.DragDropPractice"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PlayGround.WPF"
      mc:Ignorable="d" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderBrush="Black" Background="Transparent" BorderThickness="3">
            <local:DragDropCanvas>
                <local:DroppableObject>
                    <Rectangle Width="50"
                               Height="50"
                               Fill="Red"/>
                </local:DroppableObject>
            </local:DragDropCanvas>
        </Border>
        <Border Grid.Column="1" BorderBrush="Red" Background="Transparent" BorderThickness="3">
            <local:DragDropCanvas>
                <local:DroppableObject>
                    <Rectangle Width="50"
                               Height="50"
                               Fill="Black"/>
                </local:DroppableObject>
            </local:DragDropCanvas>
        </Border>
    </Grid>
</UserControl>
